@model List<Models.Framework.Account>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="panel-body">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên đăng nhập</th>
                <th>Họ</th>
                <th>Tên </th>
                <th>SDT</th>
                <th>Quyền</th>
                <th>Công cụ</th>

            </tr>
        </thead>
        <tbody>
            @{ 
                int i = 0;
            }
            @foreach (var item in Model)
            {
                
                i++;
            <tr class="odd gradeX" id="row_@item.Username">
                <td>@i</td>
                <td>@item.Username</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.title</td>
                <td class="center">
                    @Ajax.ActionLink("Xóa", "Delete",new {@id=item.Username}, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xóa bản ghi này",
                   OnComplete ="$('#row_"+@item.Username+"').remove()",
                   HttpMethod ="Delete"
               })    @Html.ActionLink("Đổi mật khẩu", "Edit", new { id = item.Username })
            </td>
            </tr>
            }

        </tbody>
    </table>
    @Html.ActionLink("Thêm", "Create", "User", new { @class = "btn btn-primary" })
   
</div>